@model WebApplication5.Models.ExamViewModel

@{
    ViewBag.Title = "addExam";
    Layout = "~/Views/Shared/_admin_layout.cshtml";
}









<div class="content-page">

    <!-- Start content -->
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-holder">
                        <h1 class="main-title float-left">Add Exam</h1>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item active">Add Exam</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->



            <form method="post" action="~/Admin/addExam" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger"  })
                    <div class="form-group">
                        <label>Exam title * </label>
                      
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                       
                    </div>
                    <div class="form-group w-25">
                        <label>Total MCQ *</label>
                        <input class="form-control" required type="number" name="TotalQuestions" min="10" max="300"/>
                    </div>
                    <div class="form-group w-25">
                        <label>Mark Per MCQ *</label>
                        <input class="form-control" required type="number" name="MarkPerMcq" min="1" max="20" />
                    </div>
                    <div class="form-group w-25">
                        <label>Negative Mark *</label>
                        <input class="form-control" required type="number" name="NegativeMark" min="0" max="10" />
                    </div>

                    <div class="form-group w-25">
                        <label>Time in Minuts *</label>
                        <input class="form-control" required type="number" name="TimeInMinutes" min="5" max="300" />
                    </div>

                    <div class="form-group w-25">
                        <div class="col-md-offset-2 col-md-10">
                            <label for="Image mx-2">Cover *</label>
                            <input type="file" class="" name="Image" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add Exam" class="btn btn-info"/>
                        </div>
                    </div>
                </div>
            </form>

            <div class="mt-3">
                <table class="table table-bordered">
                    <thead>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Cover</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>

                    @foreach (var i in ViewData["exams"] as List<Exam>)
                    {
                        <tr>
                            <td>@i.Id</td>
                            <td>@i.Name</td>
                            <td><img src="@i.Cover" alt="" class="img-fluid" width="50" /></td>
                            <td><a href="~/Admin/editExam/@i.Id">Edit</a></td>
                            <td><a onclick="return confirm('Are you sure you want to delete?')" href="~/Admin/deleteExam/@i.Id">Delete</a></td>
                        </tr>
                    }


                </table>
            </div>

            






        </div>
        <!-- end row -->







    </div>
    



</div>

		</div>


































