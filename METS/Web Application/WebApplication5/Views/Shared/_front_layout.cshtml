<script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "http://localhost:1771/Admin/exams",
                success: function (data) {
                    var html = '';
                    $.each(data, function (key, value) {
                        html += '<option value="%val%">%name%</option>';
                        html = html.replace("%val%", value.Id);
                        html = html.replace("%name%", value.Name);
                    });
                    $("#exam").html(html);
                }


            });

            $(document).ready(function () {
                $.ajax({
                    type: "GET",
                    url: "http://localhost:1771/Admin/subjects",
                    success: function (data) {
                        var html = '';
                        $.each(data, function (key, value) {
                            html += '<option value="%val%">%name%</option>';
                            html = html.replace("%val%", value.Id);
                            html = html.replace("%name%", value.Name);
                        });
                        $("#subject").html(html);

                    }
                });


            });


            $("#subject").on('click', function () {
                var link = "http://localhost:1771/Admin/chapters/" + this.value;
                $.ajax({
                    type: "GET",
                    url: link,
                    success: function (data) {
                        console.log(data)
                        var html = '';
                        $.each(data, function (key, value) {
                            html += '<option value="%val%">%name%</option>';
                            html = html.replace("%val%", value.Id);
                            html = html.replace("%name%", "CH " + value.ChapterNo + " " + value.Name);
                        });
                        $('#chapter').html(html);
                    }
                });



            });


        });





