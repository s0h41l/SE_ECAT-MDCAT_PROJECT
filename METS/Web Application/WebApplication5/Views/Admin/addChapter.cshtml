@model WebApplication5.Models.ChapterViewModel

@{
    ViewBag.Title = "addChapter";
    Layout = "~/Views/Shared/_admin_layout.cshtml";
}

<div class="content-page">


   

    <!-- Start content -->
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-holder">
                        <h1 class="main-title float-left">Add Chapter</h1>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item active">Add Chapter</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->



            <form method="post" action="~/Admin/AddChapter">

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>ChapterViewModel</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" , })
                        </div>
                    </div>


                    <div class="ml-2 form-group w-25">
                        <label for="exam">Subject</label>
                        <div class="col-md10">

                            <select name="SubjectId" id="subject" class="form-control" required>
                                <option value="1">Physics</option>
                            </select>
                        </div>

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.ChapterNo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ChapterNo, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.ChapterNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-info" />
                        </div>
                    </div>
                </div>

            </form>


            <div class="">
                <table class="table table-bordered table-info table-striped">
                    <thead>
                    <th>Id</th>
                    <th>Chapter No</th>
                    <th>Name</th>
                    <th>Action</th>
                    </thead>
                    <tbody>
                        @foreach (var i in ViewData["chapters"] as List<Chapter>)
                        {

                            <tr>
                                <td>@i.Id</td>
                                <td>@i.ChapterNo</td>
                                <td>@i.Name</td>
                                <td><a onclick="return confirm('Are you sure you want to delete?')" class="nav-link" href="~/Admin/deleteChapter/@i.Id">Delete</a></td>
                            </tr>


                        }
                        
                        
                    </tbody>

                </table>
            </div>


        </div>
        
        <!-- end row -->


    </div>




</div>

		</div>