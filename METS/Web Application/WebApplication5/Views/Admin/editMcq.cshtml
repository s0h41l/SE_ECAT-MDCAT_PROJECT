@model WebApplication5.Models.McqViewModel

@{
    ViewBag.Title = "Edit Mcq";
    Layout = "~/Views/Shared/_admin_layout.cshtml";
}



@{ 
    var mcq = ViewData["mcq"] as Mcq;
}


<div class="content-page">

    <!-- Start content -->
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-holder">
                        <h1 class="main-title float-left">Edit MCQ</h1>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item">Edit</li>
                            <li class="breadcrumb-item active">Edit MCQ</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <form method="post" action="~/Admin/editMcq/@mcq.Id">


                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        <label>Questions * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control", required = "required" , @Value = mcq.Question } })
                            @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group w-5">
                        <label>Option A * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OptionA, new { htmlAttributes = new { @class = "form-control", required = "required" , @Value = mcq.OptionA } })
                            @Html.ValidationMessageFor(model => model.OptionA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group w-50">
                        <label>Option B * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OptionB, new { htmlAttributes = new { @class = "form-control", required = "required", @Value = mcq.OptionB} })
                            @Html.ValidationMessageFor(model => model.OptionB, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group w-50">
                        <label>Option C * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OptionC, new { htmlAttributes = new { @class = "form-control", required = "required",@Value = mcq.OptionC } })
                            @Html.ValidationMessageFor(model => model.OptionC, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group w-50">
                        <label>Option D * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.OptionD, new { htmlAttributes = new { @class = "form-control", required = "required" , @Value = mcq.OptionD} })
                            @Html.ValidationMessageFor(model => model.OptionD, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group w-50">
                        <label>Correct Option * </label>
                        <div class="col-md-10">
                            <select name="CorrectOption" class="form-control" required>
                                <option value="@mcq.CorrectOption">@mcq.CorrectOption</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>

                            </select>
                        </div>
                    </div>

                    <div class="ml-2 form-group w-25">
                        <label>Exam * </label>
                        <div class="col-md10">

                            <select name="ExamId" id="exam" class="form-control" required>
                            </select>
                        </div>



                    </div>

                    <div class="ml-2 form-group w-25">
                        <label>Subject * </label>
                        <div class="col-md10">

                            <select name="SubjectId" id="subject" class="form-control" required>
                                <option value="1">Physics</option>
                            </select>
                        </div>

                    </div>

                    <div class="ml-2 form-group w-25">
                        <label>Chapter * </label>
                        <div class="col-md10">

                            <select name="ChapterId" id="chapter" class="form-control" required>
                                <option value="1">Intro</option>
                            </select>
                        </div>

                    </div>

                    <div class="form-group w-25">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update MCQ" class="btn btn-info" />
                        </div>
                    </div>
                </div>

            </form>

        </div>


    </div>




</div>
<!-- END container-fluid -->
		</div>
