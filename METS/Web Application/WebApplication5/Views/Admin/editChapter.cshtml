@model WebApplication5.Models.ChapterViewModel

@{
    ViewBag.Title = "Edit Chapter";
    Layout = "~/Views/Shared/_admin_layout.cshtml";
}

<div class="content-page">

    @{ 
        var chap = ViewData["chapter"] as Chapter;
    }

    <!-- Start content -->
    <div class="content">

        <div class="container-fluid">

            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-holder">
                        <h1 class="main-title float-left">Add Chapter</h1>
                        <ol class="breadcrumb float-right">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item active">Add Chapter</li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->



            <form method="post" action="~/Admin/editChapter/@chap.Id">

                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Name * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", required = "required",@Value=chap.Name } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", })
                        </div>
                    </div>

                    <div class="ml-2 form-group w-25">
                        <label>Subject * </label>
                        <div class="col-md10">
                            <select name="SubjectId" id="subject" class="form-control" required>
                                <option value="1">Physics</option>
                            </select>
                        </div>

                    </div>


                    <div class="form-group">
                        <label>Chapter No * </label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ChapterNo, new { htmlAttributes = new { @class = "form-control", required = "required",@Value=chap.ChapterNo } })

                            @Html.ValidationMessageFor(model => model.ChapterNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update" class="btn btn-info" />
                        </div>
                    </div>
                </div>

            </form>


            


        </div>

        <!-- end row -->


    </div>




</div>

		</div>